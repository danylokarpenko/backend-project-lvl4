include ../mixins/forms.pug

doctype html
html(lang="en")
  head
    title= Title
    script(src='/assets/main.js')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-faded
      a.navbar-brand(href="/") Task Manager
      button.navbar-toggler(data-toggle="collapse" data-target="#navbarSupportedContent")
        span.navbar-toggler-icon
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/users') Users
        ul.navbar-nav
          if isSingedIn()
            li.nav-item
              a.nav-link(href='/session' data-method='delete' rel='nofollow') Sign Out
          else
            li.nav-item
              a.nav-link(href='/newSession' method='post') Sign In
            li.nav-item
              a.nav-link(href='/newUser') Sign Up
    .container
      block content
